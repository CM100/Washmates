<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:spinnerItemStyle">@style/TextViewSpinnerItem</item>
    </style>

    <style name="TextViewSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingLeft">@dimen/spinner_item_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/spinner_item_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/spinner_item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/spinner_item_vertical_padding</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/login_button_top_color</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="colorAccent">@color/login_button_top_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorSwitchThumbNormal">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/login_button_top_color</item>
    </style>

    <style name="ScheduleHeaderStyleBase">
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@color/headers_background</item>

    </style>

    <style name="ScheduleButtonStyleBase">
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="RateServiceHeaderStyleBase">
        <item name="android:paddingLeft">9dp</item>
        <item name="android:background">@color/headers_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>


    <style name="RatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_bg</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:maxHeight">28dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <style name="SignupFragmentTitleBaseStyle" >
        <item name="android:background">@color/login_button_top_color</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/signup_info_vertical_padding</item>
        <item name="android:paddingTop">@dimen/signup_info_vertical_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <style name="SignupFragmentEditTextBaseStyle" >
        <item name="android:background">@drawable/signup_edittext_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/signup_edittext_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/signup_edittext_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/signup_edittext_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/signup_edittext_vertical_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_size_13sp</item>
    </style>
</resources>
