<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_fragment_edittext_height"
                android:layout_marginLeft="@dimen/login_fragment_elements_horizontal_margin"
                android:layout_marginRight="@dimen/login_fragment_elements_horizontal_margin"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/login_fragment_edittext_margin_bottom"
                android:paddingRight="@dimen/login_fragment_edittext_drawable_padding"
                android:drawablePadding="@dimen/login_fragment_edittext_drawable_padding"
                android:hint="@string/login_button_hint_text"
                android:textSize="@dimen/font_size_13sp"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:drawableLeft="@drawable/email_edittext_drawable_left"
                android:background="@drawable/edittext_background" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_fragment_edittext_height"
                android:layout_marginLeft="@dimen/login_fragment_elements_horizontal_margin"
                android:layout_marginRight="@dimen/login_fragment_elements_horizontal_margin"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/login_fragment_edittext_margin_bottom"
                android:drawablePadding="@dimen/login_fragment_edittext_drawable_padding"
                android:paddingRight="@dimen/login_fragment_edittext_drawable_padding"
                android:hint="@string/password_button_hint_text"
                android:textSize="@dimen/font_size_13sp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:drawableLeft="@drawable/password_edittext_drawable_left"
                android:background="@drawable/edittext_background"/>

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_button_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_16sp"
                android:layout_marginLeft="@dimen/login_fragment_elements_horizontal_margin"
                android:layout_marginRight="@dimen/login_fragment_elements_horizontal_margin"
                android:layout_marginBottom="@dimen/login_fragment_button_margin_bottom"
                android:background="@drawable/login_button_background"/>

            <TextView
                android:id="@+id/forgot_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password_text"
                android:textSize="@dimen/font_size_12sp"
                android:textColor="@color/forgot_password_text_color" />

            <LinearLayout
                android:id="@+id/forgot_password_clickable_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_password_click_text"
                    android:textSize="@dimen/font_size_12sp"
                    android:textColor="@color/forgot_password_text_color"/>

                <TextView
                    android:id="@+id/link_for_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/forgot_password_link_text"
                    android:textSize="@dimen/font_size_12sp"
                    android:textStyle="bold"
                    android:textColor="@color/forgot_password_link_color"
                    android:paddingTop="@dimen/login_fragment_forgot_password_link_vertical_padding"
                    android:paddingBottom="@dimen/login_fragment_forgot_password_link_vertical_padding"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
