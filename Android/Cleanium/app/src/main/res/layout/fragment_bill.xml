<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:clickable="false"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/status_notes"
        style="@style/ScheduleHeaderStyleBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:drawableRight="@drawable/status_notes_icon"
        android:gravity="center_vertical"
        android:text="@string/bill_breakdown"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size_16sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:layout_below="@id/status_notes">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/bill_breakdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:scrollbars="none">

        </android.support.v7.widget.RecyclerView>
    </FrameLayout>
</RelativeLayout>