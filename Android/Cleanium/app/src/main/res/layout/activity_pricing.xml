<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/navigationDrawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/Theme.AppCompat"
                android:layout_alignParentTop="true"
                app:theme="@style/ToolbarTheme">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_toLeftOf="@+id/logo"
                        android:text="@string/pricing_title"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_16sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/logo_menu" />
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:paddingTop="@dimen/bill_row_vertical_padding"
                        android:paddingBottom="@dimen/bill_row_vertical_padding">
                        <TextView
                            android:id="@+id/service_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/bag_of_laundry"
                            android:textSize="@dimen/font_size_14sp"
                            android:textColor="#6d6d6d"
                            android:layout_toLeftOf="@+id/service_price"
                            android:layout_marginRight="@dimen/bill_row_vertical_padding"/>

                        <TextView
                            android:id="@id/service_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bag_of_laundry_price"
                            android:textColor="#6d6d6d"
                            android:textSize="@dimen/font_size_14sp"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6d6d6d" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:paddingTop="@dimen/bill_row_vertical_padding"
                        android:paddingBottom="@dimen/bill_row_vertical_padding">
                        <TextView
                            android:id="@+id/service_title2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/iron_shirts"
                            android:textSize="@dimen/font_size_14sp"
                            android:textColor="#6d6d6d"
                            android:layout_toLeftOf="@+id/service_price2"
                            android:layout_marginRight="@dimen/bill_row_vertical_padding"/>

                        <TextView
                            android:id="@id/service_price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/iron_shirts_price"
                            android:textColor="#6d6d6d"
                            android:textSize="@dimen/font_size_14sp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6d6d6d" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:paddingTop="@dimen/bill_row_vertical_padding"
                        android:paddingBottom="@dimen/bill_row_vertical_padding">
                        <TextView
                            android:id="@+id/service_title3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/dry_cleaning"
                            android:textSize="@dimen/font_size_14sp"
                            android:textColor="#6d6d6d"
                            android:layout_toLeftOf="@+id/service_price3"
                            android:layout_marginRight="@dimen/bill_row_vertical_padding"/>

                        <TextView
                            android:id="@id/service_price3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dry_cleaning_price"
                            android:textColor="#6d6d6d"
                            android:textSize="@dimen/font_size_14sp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6d6d6d" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:paddingTop="@dimen/bill_row_vertical_padding"
                        android:paddingBottom="@dimen/bill_row_vertical_padding">
                        <TextView
                            android:id="@+id/service_title4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/dry_cleaning_not_standard"
                            android:textSize="@dimen/font_size_14sp"
                            android:textColor="#6d6d6d"
                            android:layout_toLeftOf="@+id/service_price4"
                            android:layout_marginRight="@dimen/bill_row_vertical_padding"/>

                        <TextView
                            android:id="@id/service_price4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#6d6d6d"
                            android:textSize="@dimen/font_size_14sp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6d6d6d" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:paddingTop="@dimen/bill_row_vertical_padding"
                        android:paddingBottom="@dimen/bill_row_vertical_padding">
                        <TextView
                            android:id="@+id/service_title5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/pickup_and_delivery_free"
                            android:textSize="@dimen/font_size_14sp"
                            android:textColor="#6d6d6d"
                            android:layout_toLeftOf="@+id/service_price5"
                            android:layout_marginRight="@dimen/bill_row_vertical_padding"/>

                        <TextView
                            android:id="@id/service_price5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pickup_and_delivery_free_price"
                            android:textColor="#6d6d6d"
                            android:textSize="@dimen/font_size_14sp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6d6d6d" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:paddingTop="@dimen/bill_row_vertical_padding"
                        android:paddingBottom="@dimen/bill_row_vertical_padding">
                        <TextView
                            android:id="@+id/service_title6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/pickup_and_delivery_otherwise"
                            android:textSize="@dimen/font_size_14sp"
                            android:textColor="#6d6d6d"
                            android:layout_toLeftOf="@+id/service_price6"
                            android:layout_marginRight="@dimen/bill_row_vertical_padding"/>

                        <TextView
                            android:id="@id/service_price6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pickup_and_delivery_otherwise_price"
                            android:textColor="#6d6d6d"
                            android:textSize="@dimen/font_size_14sp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6d6d6d" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:paddingTop="@dimen/bill_row_vertical_padding"
                        android:paddingBottom="@dimen/bill_row_vertical_padding">
                        <TextView
                            android:id="@+id/service_title7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/no_show"
                            android:textSize="@dimen/font_size_14sp"
                            android:textColor="#6d6d6d"
                            android:layout_toLeftOf="@+id/service_price7"
                            android:layout_marginRight="@dimen/bill_row_vertical_padding"/>

                        <TextView
                            android:id="@id/service_price7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_show_price"
                            android:textColor="#6d6d6d"
                            android:textSize="@dimen/font_size_14sp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toolbar_shadow"
                android:layout_below="@id/toolbar"/>
        </RelativeLayout>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigation_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/navigation_drawer_background"
        android:scrollbars="none">
    </android.support.v7.widget.RecyclerView>
</android.support.v4.widget.DrawerLayout>